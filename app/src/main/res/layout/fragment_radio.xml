<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".radio.RadioFragment">
    <com.google.android.material.internal.BaselineLayout
        android:id="@+id/baseline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100dp"
        />
    <ImageView
        android:id="@+id/radio_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/radio_image"
        app:layout_constraintTop_toBottomOf="@id/baseline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.internal.BaselineLayout
    android:id="@+id/baseline_tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="310dp"/>
    <TextView
        android:id="@+id/radio_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/baseline_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/holy_quran_radio"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/reader_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radio_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/holy_name"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/reader_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/reader_tv"
        app:layout_constraintStart_toStartOf="@id/reader_tv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="ttttttttttttttttttttttt"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginHorizontal="30dp"
        />
    <ImageView
        android:id="@+id/pause_ic"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/pause_ic"
        app:layout_constraintTop_toBottomOf="@id/radio_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/stop_ic"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/paly_ic"
        app:layout_constraintTop_toBottomOf="@id/radio_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        />
    <ImageView
    android:id="@+id/previous_ic"
    android:layout_width="60dp"
    android:layout_height="80dp"
    android:src="@drawable/previous_ic"
    app:layout_constraintTop_toBottomOf="@id/radio_tv"
    app:layout_constraintStart_toStartOf="@id/radio_tv"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="10dp"

    />
    <ImageView
        android:id="@+id/next_ic"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/next_ic"
        app:layout_constraintTop_toBottomOf="@id/radio_tv"
        app:layout_constraintEnd_toEndOf="@id/radio_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>